<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.khanhlh.substationmonitor.ui.main.fragments.detail.DetailDeviceViewModel" />

        <variable
            name="device"
            type="com.khanhlh.substationmonitor.model.Device" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:padding="@dimen/_8sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/lightOn"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_300sdp"
            android:src="@drawable/ic_light_on"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/lightOff"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_300sdp"
            android:src="@drawable/ic_light_off"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_24ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/lightOn"
            app:layout_constraintStart_toEndOf="@id/lightOn"
            app:layout_constraintTop_toTopOf="@id/lightOn"
            tools:text="@{device.wattage}" />

        <com.suke.widget.SwitchButton
            android:id="@+id/lightSwitch"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:sb_checked="@{device.status}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lightOn" />

        <LinearLayout
            android:id="@+id/llTimerOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/lightSwitch">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/light_timer_on"
                android:textColor="@color/blue"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/tvTimerOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/red"
                android:textSize="@dimen/_16ssp"
                tools:text="Sau 4 giờ 4 phút" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTimerOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/llTimerOn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/light_timer_off"
                android:textColor="@color/blue"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/tvTimerOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/red"
                android:textSize="@dimen/_16ssp"
                tools:text="Sau 4 giờ 4 phút" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>