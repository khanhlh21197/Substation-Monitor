<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.yanzhenjie.wheel.WheelView
        android:id="@+id/hourWheel"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.yanzhenjie.wheel.WheelView
        android:id="@+id/minuteWheel"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@id/hourWheel"
        app:layout_constraintStart_toEndOf="@id/hourWheel"
        app:layout_constraintTop_toTopOf="@id/hourWheel" />

</androidx.constraintlayout.widget.ConstraintLayout>