<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_warning_red" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imgLogo"
        android:maxLines="1"
        android:text="Nhiệt độ vượt ngưỡng cho phép"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:id="@+id/removeWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imgLogo"
        android:background="@drawable/btn_onpress_background_gradient_blue"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tắt âm báo"
            android:textAllCaps="true"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>
</RelativeLayout>