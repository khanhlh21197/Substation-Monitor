<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeColor1</item>
        <item name="colorPrimaryDark">@color/themeColor1</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="TextAppearance.FloatLabelHint"
        parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:textColor">?android:colorAccent</item>
    </style>

    <style name="searchView" parent="android:style/Widget.Material.SearchView">
        <item name="colorControlActivated">?android:colorAccent</item>
        <item name="android:searchIcon">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>

    <style name="SearchWindowAnimations">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/fade_out_rapidly</item>
    </style>
</resources>
